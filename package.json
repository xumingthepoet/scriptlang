{
  "name": "script-lang",
  "version": "1.0.0",
  "description": "ScriptLang project scaffold and implementation",
  "main": "dist/index.js",
  "scripts": {
    "validate:docs": "node scripts/validate-docs.mjs",
    "build": "tsc -p tsconfig.json",
    "typecheck": "tsc --noEmit -p tsconfig.json",
    "test:unit": "node --test --import tsx ./test/**/*.test.ts",
    "coverage:strict": "npm run build && node --experimental-test-coverage --test-coverage-include='dist/src/**/*.js' --test-coverage-exclude='dist/src/compiler/xml.js' --test-coverage-exclude='dist/src/index.js' --test-coverage-exclude='dist/src/**/index.js' --test-coverage-lines=100 --test-coverage-functions=100 --test ./dist/test/**/*.test.js",
    "quality:gate": "npm run validate:docs && npm run typecheck && npm run coverage:strict",
    "pretest": "npm run quality:gate",
    "test": "npm run test:unit"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "type": "commonjs",
  "devDependencies": {
    "@types/node": "^25.3.0",
    "tsx": "^4.21.0",
    "typescript": "^5.9.3"
  },
  "dependencies": {
    "saxes": "^6.0.0"
  }
}
