<script name="main">
  <var name="hp" type="number" value="10"/>
  <text value="before ${hp}"/>
  <choice>
    <option text="Heal">
      <code>hp = hp + 5;</code>
    </option>
    <option text="Hit">
      <code>hp = hp - 2;</code>
    </option>
  </choice>
  <text value="after ${hp}"/>
</script>
